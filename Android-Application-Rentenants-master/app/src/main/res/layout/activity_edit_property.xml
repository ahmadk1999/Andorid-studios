<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".editProperty">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Property"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:srcCompat="@tools:sample/avatars" />

   <!--
   <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/edit_property_bedrooms"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_property_bedrooms"
        app:layout_constraintTop_toBottomOf="@+id/edit_property_bedrooms" />
    -->

    <Button
        android:id="@+id/home_page_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Home"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/edit_property_balcony"
        app:layout_constraintStart_toStartOf="@+id/edit_property_balcony"
        app:layout_constraintTop_toBottomOf="@+id/edit_property_balcony" />

    <Button
        android:id="@+id/edit_property_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Cancel"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/home_page_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home_page_button"
        app:layout_constraintTop_toTopOf="@+id/home_page_button" />

    <Button
        android:id="@+id/edit_property_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Update"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/home_page_button"
        app:layout_constraintEnd_toStartOf="@+id/home_page_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_page_button" />

    <ProgressBar
        android:id="@+id/edit_property_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="51dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/property_description"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/edit_property_bedrooms"
        app:layout_constraintStart_toStartOf="@+id/edit_property_bedrooms"
        app:layout_constraintTop_toBottomOf="@+id/edit_property_bedrooms" />

    <EditText
        android:id="@+id/property_postal_address"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:hint="Postal Address"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/property_description"
        app:layout_constraintStart_toStartOf="@+id/property_description"
        app:layout_constraintTop_toBottomOf="@+id/property_description" />

    <EditText
        android:id="@+id/property_surface_area"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:hint="Surface Area"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/property_postal_address"
        app:layout_constraintStart_toStartOf="@+id/property_postal_address"
        app:layout_constraintTop_toBottomOf="@+id/property_postal_address" />

    <EditText
        android:id="@+id/property_construction_year"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:hint="Construction Year"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/property_surface_area"
        app:layout_constraintStart_toStartOf="@+id/property_surface_area"
        app:layout_constraintTop_toBottomOf="@+id/property_surface_area" />

    <EditText
        android:id="@+id/property_rental_price"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:hint="Rental Price"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/property_construction_year"
        app:layout_constraintStart_toStartOf="@+id/property_construction_year"
        app:layout_constraintTop_toBottomOf="@+id/property_construction_year" />

    <EditText
        android:id="@+id/edit_property_available_date"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:hint="Available Date"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/property_rental_price"
        app:layout_constraintStart_toStartOf="@+id/property_rental_price"
        app:layout_constraintTop_toBottomOf="@+id/property_rental_price" />

    <CheckBox
        android:id="@+id/edit_property_garden"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/input_background"
        android:text="Garden"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/edit_property_balcony"
        app:layout_constraintEnd_toStartOf="@+id/edit_property_balcony"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_property_balcony"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/edit_property_balcony"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_background"
        android:text="Balcony"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/edit_property_available_date"
        app:layout_constraintStart_toStartOf="@+id/edit_property_available_date"
        app:layout_constraintTop_toBottomOf="@+id/edit_property_available_date" />

    <CheckBox
        android:id="@+id/edit_property_furnished"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/input_background"
        android:text="Furnished"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/edit_property_balcony"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_property_balcony"
        app:layout_constraintTop_toTopOf="@+id/edit_property_balcony" />

    <EditText
        android:id="@+id/edit_property_bedrooms"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="186dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:hint="Number Of Bedrooms"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>